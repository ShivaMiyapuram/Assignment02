<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.s528748.assignment02.MainActivity"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Periodic Table"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="2"
        android:columnCount="10"


        >

        <Button
            android:id="@+id/button1"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#ff7f00"
            android:text="Hydrogen"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="5sp"


            />

        <Button
            android:id="@+id/button6"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#673AB7"
            android:text="Helium"
            android:textSize="5sp"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_row="0"
            android:layout_column="9"


            />

        <Button
            android:id="@+id/button100"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#007f56"
            android:text="Lithium"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button111"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#00557f"
            android:text="Beryllium"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button12"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#AD1457"
            android:text="Boron"
            android:layout_margin="2.5dp"
            android:onClick="onClick"

            android:layout_row="1"
            android:layout_column="4"
            android:textSize="5sp"

            />


        <Button
            android:id="@+id/button7"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#90CAF9"
            android:text="Carbon"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="5"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button13"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#CDDC39"
            android:text="Nitrogen"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="6"
            android:textSize="5sp"
            />


        <Button
            android:id="@+id/button2"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#795548"
            android:text="Oxygen"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="7"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button14"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#607D8B"
            android:text="Fluorine"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="8"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button15"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#651FFF"
            android:text="Neon"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="9"
            android:textSize="5sp"
            />




        <Button
            android:id="@+id/button3"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#80DEEA"
            android:text="Sodium"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button16"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#004D40"
            android:text="Magnesium"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:textSize="5sp"
            />


        <Button
            android:id="@+id/button4"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#4CAF50"
            android:text="Aluminium"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:textSize="5sp"

            />
        <Button
            android:id="@+id/button5"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#009688"
            android:text="Silicon"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:textSize="5sp"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#D81B60"
            android:text="Phosphorous"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:textSize="5sp"
            />
        <Button
            android:id="@+id/button9"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#2196F3"
            android:text="Sulphur"
            android:layout_margin="2.5dp"
            android:onClick="onClick"
            android:textSize="5sp"
            
            />

        //

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Click on elements"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textColor="#ECEFF1"
                android:onClick="onReset"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textColor="#ECEFF1"
                android:onClick="onCalculate"
                android:backgroundTint="@android:color/holo_blue_light"
                />


        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="left"
            android:text="Formula:"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="22sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginLeft="25dp"
                android:text="_ _ _ _ _ _ _"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
